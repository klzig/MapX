<Application
    x:Class="CycleTrip.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="using:CycleTrip.Localization"
    xmlns:local="using:CycleTrip.UWP"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--	<ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/TextStyles.xaml"/>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/> -->


                <ResourceDictionary Source="Styles/AppColors.xaml"/>
                <ResourceDictionary Source="Styles/AppTheme.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
                <!--Add other global resource dictionaries here-->
            </ResourceDictionary.MergedDictionaries>

            <AcrylicBrush x:Key="NavigationViewDefaultPaneBackground"
              BackgroundSource="Backdrop" TintColor="CornflowerBlue" TintOpacity=".4"/>
            <AcrylicBrush x:Key="NavigationViewExpandedPaneBackground"
              BackgroundSource="HostBackdrop" TintColor="CornflowerBlue" TintOpacity=".6"/>

            <SvgImageSource x:Key="Notifications" UriSource="Assets/Notifications.svg" />

            <resources:LocalizedStrings x:Key="LocalizedStrings"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>